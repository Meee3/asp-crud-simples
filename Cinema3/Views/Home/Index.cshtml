    ViewData["NomeFuncionario"] = "Bonde, James Bonde";
}

<div class="text-center">
    <h6 class="display-4">Seja bem vindo Funcionário @ViewData["NomeFuncionario"]</h6>

</div>
<br />
<br />
<div class="row">
    <div class="col-4" class="text-left">

        <table border="1" width=30% cellpadding=2px>
            <thead>
            <td>
                Opções do Funcionário
            </td>
            </thead>
            @for (int i = 1; i <= 5; i++)
            {
                <thead>
                <td>
                    Opção @i
                </td>
                </thead>
            }
        </table>
    </div>
    <div class="col-4">

        <div id="carouselSite" class="carousel slide" data-ride="carousel">

            <div class="carousel-inner">

                <div class="carousel-item active" >

                    <img src="~/img/Como-melhorar-a-produtividade.jpg" class="d-block" width="100%" height="80%"  />
                </div>

                    <div class="carousel-item">

                    <img src="~/img/indicadores-de-produtividade-gestão-da-produtividade-sabrina-nunes.jpg" class="d-block" width="100%" height="80%" />
                </div>

                    <div class="carousel-item">

                    <img src="~/img/produtividade-1024x576.png" class="d-block"  width="100%" height="80%"/>
                </div>

                    <div class="carousel-item">

                    <img src="~/img/Produtividade-2048x1485.jpg" class="d-block" width="100%" height="80%" />
             
                </div>

            </div>

            <a class="carousel-control-prev" href="#carouselSite" role="button" data-slide="prev">

                <span class="carousel-control-prev-icon"></span>
                <span class="sr-only">Anteior</span>
                
            </a>

            
            <a class="carousel-control-next" href="#carouselSite" role="button" data-slide="next">

                <span class="carousel-control-next-icon"></span>
                <span class="sr-only">Avançar</span>
                
            </a>

        </div>




    </div>
    <div class="col-4">
        - Inserir Imagem 2 - <br />
        - Outra Opções - <br />
        - e N Coisas -
    </div>
</div>




